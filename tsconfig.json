{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": false,
    "declaration": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@check-board": ["src/index.ts"]
    },
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "demo"]
}
